<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active item -->
    <item android:color="#143A595D"
        android:state_pressed="true" android:state_checked="true"/>
    <item android:color="#1E3A595D"
        android:state_focused="true" android:state_checked="true"/>
    <item android:color="#0A3A595D"
        android:state_hovered="true" android:state_checked="true"/>
    <item android:color="#003A595D"
        android:state_checked="true"/>

    <!-- Inactive item -->
    <item android:color="#14525252"
        android:state_pressed="true"/>
    <item android:color="#1E525252"
        android:state_focused="true"/>
    <item android:color="#0A525252"
        android:state_hovered="true"/>
    <item android:color="#00525252"/>

</selector>