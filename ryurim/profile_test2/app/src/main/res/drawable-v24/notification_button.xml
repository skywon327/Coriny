<!-- 버튼 배경 리소스 (button_bg.xml) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 클릭되지 않은 상태 -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="10dp" /> <!--둥근 모서리-->
            <solid android:color="@android:color/white" /> <!-- 배경색: 흰색 -->
            <stroke android:width="2dp" android:color="#70BF9F" /> <!-- 테두리 색상: 초록색 -->
        </shape>
    </item>
    <!-- 클릭된 상태 -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="50dp" /> <!-- 둥근 사각형 모양 -->
            <solid android:color="#70BF9F" /> <!-- 클릭된 상태 배경색: 초록색 -->
            <stroke android:width="2dp" android:color="#70BF9F" /> <!-- 테두리 색상: 초록색 -->
        </shape>
    </item>
</selector>